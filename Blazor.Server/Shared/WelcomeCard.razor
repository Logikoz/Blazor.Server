<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-arrow-right mr-2" aria-hidden="true" />
    Olá <strong>@Nome</strong> (@Nick), bom saber que voce tem <strong>@Idade</strong> anos de idade.
</div>

@code {
    [Parameter]
    public string Nome { get; set; }
    [Parameter]
    public string Nick { get; set; }
    [Parameter]
    public int Idade { get; set; }
}